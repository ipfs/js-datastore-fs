    "fast-write-atomic": "^0.2.0",
    "interface-datastore": "^5.1.1",
    "it-glob": "^1.0.0",
    "it-map": "^1.0.5",
    "it-parallel-batch": "^1.0.9",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/rimraf": "^3.0.2",
    "aegir": "^35.0.3",
    "async-iterator-all": "^1.0.0",
    "detect-node": "^2.0.4",
    "interface-datastore-tests": "^1.0.0",
    "ipfs-utils": "^8.1.3",
    "memdown": "^6.0.0",
    "rimraf": "^3.0.2"
  },
  "eslintConfig": {
